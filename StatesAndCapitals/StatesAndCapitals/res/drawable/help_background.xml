<!-- )))))))))))))))))))))))))) help_background ((((((((((((((((((((((((((((((((
     This is the background for the "Help Information" header. It is horizontal 
     gradient from orange to yellow, with an orange border.
-->
<shape 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle"
>
    <!-- Orange to Yellow Gradient -->
    <gradient
        android:startColor="@color/mapOrange"
        android:endColor="@color/mapYellow"
        android:type="linear"
    />
    
    <!-- Orange Border -->
    <stroke
        android:width=".75dip"
        android:color="@color/mapOrange"
    />
    
    <!-- Rounded Corners -->
    <corners
        android:radius="6dip"
    />
    
</shape>
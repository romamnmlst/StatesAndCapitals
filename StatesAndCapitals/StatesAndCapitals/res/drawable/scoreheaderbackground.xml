<!-- ))))))))))))))))))))))))))) scoreheaderbackground (((((((((((((((((((((((((
     This is the background file for a score header in the Score page. The 
     background is displayed in orange with a black border.  
-->
<shape 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle"
>
    <!-- orange background -->
    <solid 
        android:color="@color/mapOrange"
    />
    
    <!-- black border -->
    <stroke
        android:width=".5dip"
        android:color="@color/black"
    />

    <!-- slightly rounded corners -->
    <corners
        android:radius="3dip"
    />
    
</shape>